<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">

<module>

    <!-- Configurarea regulilor de importuri -->
    <module name="ImportOrder">
        <property name="order" value="alphabetical"/>
        <property name="groups" value="java,javax,org,com"/>
    </module>

    <!-- Regula pentru indentare -->
    <module name="Indentation">
        <property name="tabWidth" value="4"/>
        <property name="braceAdjustment" value="0"/>
        <property name="lineWrapping" value="100"/>
    </module>

<!--    &lt;!&ndash; Verifică dacă numele clasei respectă convențiile de denumire &ndash;&gt;-->
<!--    <module name="NamingConvention">-->
<!--        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>-->
<!--    </module>-->

    <!-- Verifică dacă toate variabilele sunt final dacă sunt constante -->
    <module name="FinalLocalVariable">
        <property name="allowUninitialized" value="true"/>
    </module>

    <!-- Verifică stilul documentației pentru metode -->
    <module name="JavadocMethod">
        <property name="required" value="true"/>
    </module>

    <!-- Verifică lățimea maximă a unei linii -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- Verifică dacă parantezele acolade sunt plasate corect -->
    <module name="NewlineAtEndOfFile"/>

    <module name="Checker">
        <module name="TreeWalker">
            <module name="MethodName">
                <property name="format" value="^[a-z](_?[a-zA-Z0-9]+)*$"/>
            </module>
        </module>
    </module>

</module>
